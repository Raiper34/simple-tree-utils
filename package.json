{
  "name": "simple-tree-utils",
  "version": "1.0.2",
  "description": "Simple Tree Utils is the library to convert and manipulate with tree-like structures.",
  "keywords": [
    "tree",
    "tree utilities",
    "tree utils",
    "tree structure",
    "tree manipulation",
    "tree converter"
  ],
  "repository": "https://github.com/Raiper34/tree-utils",
  "homepage": "https://simple-tree-utils.netlify.app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc && browserify dist/index.js -o dist/browser-bundle.js -s treeUtils && uglifyjs dist/browser-bundle.js -o dist/browser-bundle.min.js",
    "start": "npm run build && node dist/main.js",
    "test": "nyc -r lcov jasmine-ts --config=jasmine.json",
    "test:ci": "npm run test && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "docs": "typedoc src/main.ts",
    "deploy": "npm run docs && netlify deploy --dir=docs --prod",
    "release": "npm run build && npm publish && npm run deploy",
    "commit": "cz"
  },
  "author": "Raiper34",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jasmine": "^3.6.6",
    "browserify": "^17.0.1",
    "commitizen": "^4.3.1",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.12.0",
    "jasmine": "^3.6.4",
    "jasmine-ts": "^0.4.0",
    "netlify-cli": "^17.37.0",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.9",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.8.1",
    "uglify-js": "^3.19.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
